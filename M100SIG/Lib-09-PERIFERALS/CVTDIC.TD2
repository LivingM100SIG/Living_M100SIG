1 MAXFILES=2:CLS:PRINT:PRINT"Enter letter to be transferred:";:F$=INPUT$(1):PRINTF$
2 N=2*INT(ASC(F$)/2-.2)+1
3 OPEN"0:DIC-"+CHR$(N)+CHR$(N+1)+".DO"FORINPUTAS1:OPEN"DICT-"+F$FOROUTPUTAS2
4 IFEOF(1)THENMAXFILES=1:BEEP:MENUELSELINEINPUT#1,A$:IFLEFT$(A$,1)=CHR$(ASC(F$)+32)THENPRINT#2,A$
5 GOTO4
