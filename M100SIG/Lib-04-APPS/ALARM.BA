0 'Alarm System (Mini Version)			By Andrew McDonald	10/01/85
1 DEFSTRA,M:INPUT"A,M,S";A,M,SN:A=RIGHT$("000"+A,4):M=RIGHT$("000"+M,4):M=LEFT$(M,2)+":"+RIGHT$(M,2)+":00":Z=3600*VAL(LEFT$(A,2))+60*VAL(RIGHT$(A,2)):CLS:POKE63056,128
2 A=INKEY$:GOSUB5:L=INT(Z-T):IFL<0THENL=L+86400
3 PRINT@173,TIME$,l:IFTIME$=MTHENL=0:SN=.02:GOTO3ELSEIFL=0THENSOUND1000,20:IFINKEY$=""THEN3ELSEGOSUB5:Z=T+SN*60
4 GOTO2
5 T=VAL(LEFT$(TIME$,2))*3600+VAL(MID$(TIME$,4,2))*60+VAL(RIGHT$(TIME$,2)):RETURN
