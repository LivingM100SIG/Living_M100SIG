430 G=L/3.785
440 G$="THAT IS ##.## "
450 CLS:PRINT:PRINTUSINGG$;G;:PRINT" GALLONS"
460 FORZ=0TO895:NEXTZ
470 RETURN
480 REM MILE SUBTRACT
490 CLS:INPUT"MILEAGE AT THIS FILL-UP";B
500 INPUT"MILEAGE AT LAST FILL-UP";L
510 M=B-L:X=5
520 RETURN
