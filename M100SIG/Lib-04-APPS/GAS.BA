150 IFE$="HELP"THENGOSUB480ELSE160
160 CLS:PRINT:PRINT"CONVERTS LITERS TO GALLONS & COMPUTES":PRINT"MILEAGE AND COST PER MILE.";:PRINT"ALSO AVERAGES FUEL CONSUMPTION TO DATE."
170 GOSUB530
190 REM M=MILES DRIVEN
200 IFX=5GOTO220ELSEPRINT:INPUT"MILES DRIVEN";M
