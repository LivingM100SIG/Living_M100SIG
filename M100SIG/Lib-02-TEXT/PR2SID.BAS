0 REM PR2SID - print docs on 2 sides of paper
1 REM    by eric sakara - 73347,201
2 CLS:MAXFILES=2:DEFINT A-Z:N=-1
3 INPUT "input file";A$:OPEN A$ FOR INPUT AS 1:GOSUB 50
5 LINE INPUT #1,B$:IF EOF(1) THEN GOTO 100
6 B=INSTR(B$,CHR$(12)):IF B=0 THEN GOTO 9
7 CLOSE 2:IF N THEN N=0 ELSE N=-1
8 GOSUB 50
9 PRINT #2,B$:GOTO 5
50 IF N THEN OPEN "odd.do" FOR APPEND AS 2 ELSE OPEN "even.do" FOR APPEND AS 2
51 PRINT N;:RETURN
100 PRINT #2,B$:CLOSE:MENU
