10 CLS:PRINTCHR$(27);"P
20 MAXFILES=1:CLEAR2000:DIMNOUN$(50),VERB$(50)
30 OPEN"noun"FORINPUTAS1
50 LINEINPUT#1,NOUN$(N):N=N+1
60 IFEOF(1)THEN70ELSE50
70 CLOSE#1
80 OPEN"verb"FORINPUTAS1
90 LINEINPUT#1,VERB$(V):V=V+1
100 IFEOF(1)THEN110ELSE90
110 CLOSE#1
120 NR=INT(RND(1)*N):VR=INT(RND(1)*V)
130 PT$=NOUN$(NR)+" "+VERB$(VR)+"."
140 FORL=1TOLEN(PT$)
150 M$=MID$(PT$,L,1)
160 PRINTM$;
170 IFPOS(0)>30ANDM$=" "THENPRINT
180 NEXTL:PRINT:PRINT
200 GOTO120
