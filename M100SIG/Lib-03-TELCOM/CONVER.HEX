10 'This program will convert a file
20 'stored in ASCII HEX format into
30 'a /CMD file.
40 '
50 CLS:CLEAR1000:PRINT@256,;
60 LINEINPUT"/HEX FILE NAME? ";I$
70 PRINT:LINEINPUT"/CMD FILE NAME ";O$ 80 OPEN"I",1,I$:OPEN"O",2,O$
90 LINEINPUT#1,A$:IF A$=""GOTO90:A$=RIGHT$(A$,LEN(A$)-INSTR(A$,"'"))
95 D$="":PRINT@512,A$:FOR X=1 TO LEN(A$) STEP2
100 C$=MID$(A$,X,2):D=ASC(C$):E=ASC(RIGHT$(C$,1)):D=(D-48)+(D>57)*7:E=(E-48)+(E>57)*7:M=D*16+E:D$=D$+CHR$(M):PRINTCHR$(-M*(M>31ANDM<97)-46*(M<32ORM>96));"";:NEXTX
110 PRINT#2,D$;:IFNOTEOF(1) THEN90ELSECLOSE
